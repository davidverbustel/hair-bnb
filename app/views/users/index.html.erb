<!-- TEMPORARY USER INDEX -->
<!-- TO BE DELETED WHEN AUTHENTICATION SYSTEM WILL BE READY -->
<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div id="presentation-box" class="card-block shadowed-box">
        <h3>Temporary Users List</h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <% @users.each do | user | %>
      <div id="presentation-box" class="card-block shadowed-box text-left">
        <div class="row my-accomodation-box text-left">
          <div class="col-xs-12 col-sm-3">
            <div class="img-wrapper">
              <%= image_tag( user.picture, class: "top-img img-circle")%>
            </div>
          </div>
          <div class="col-xs-12 col-sm-8 col-sm-offset-1">
            <h1 class="main-title"><%= "#{user.first_name} #{user.last_name}" %></h1>
            <h4 class="main-subtitle"><%= user.email %></h4>
            <p><%= link_to "See profile", user_path(user) %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
