<p><%= "#{@booking.accomodation.description}" %></p>
<p><%= "Booking request from #{@booking.from.strftime("%F")} to #{@booking.to.strftime("%F")}" %></p>
<p>
  <%= "Confirmation status:"%>
  <% if @booking.accepted == false %>
    <%= "pending" %>
    <%= simple_form_for(@booking, html: { multipart: true }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :accepted, as: :boolean %>
      <%= f.button :submit %>
    <% end %>
  <% else %>
    <%= "accepted" %>
  <% end %>
</p>
